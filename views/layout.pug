doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title Article Base
        link(rel="stylesheet", href="/fontawesome-free-5.11.2-web/css/all.css")
        link(rel="stylesheet", href="/bootstrap-4.3.1-dist/css/bootstrap.css")
        link(rel="stylesheet", href="/bootstrap-4.3.1-dist/css/styles.css")
    body
        nav.navbar.navbar-expand-sm.navbar-dark.bg-dark.sticky-top
            .container
                button.navbar-toggler(data-toggle='collapse', data-target='#navbar')
                    span.navbar-toggler-icon
                a.navbar-brand(href='/') ArticleBase
                #navbar.navbar-collapse.collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href="/") Home
                        if user
                            li.nav-item
                                a.nav-link(href="/articles/add") Add Article
                    ul.navbar-nav.ml-auto.dropdown
                        if user
                            a(href="#").nav-link.dropdown-toggle(data-toggle='dropdown')#navbarDropdown #{user.name}
                        else
                            a(href="#").nav-link.dropdown-toggle(data-toggle='dropdown')#navbarDropdown Account
                        div(aria-labelledby="navbarDropdown").dropdown-menu
                            if user
                                li.dropdown-item
                                    a.nav-link(href="/users/logout") Logout
                            else
                                li.dropdown-item
                                    a.nav-link(href="/users/register") Register
                                li.dropdown-item
                                    a.nav-link(href="/users/login") Login
        != messages('message', locals)
        block content
        br
        hr
        footer.bg-dark.text-light
            .container
                .row
                    .col.text-center.py-4
                        #particles-js
                        p.h5 copyright &copy; 2020 
                        br
                        p Joseph: 08149628204
        script(src="/bootstrap-4.3.1-dist/js/jquery_3.3.1.js")
        script(src="/bootstrap-4.3.1-dist/js/bootstrap.js")
        script(src="/particles.js-master/particles.js")
        script(src="/particles.js-master/demo/js/app.js")
        script(src="/bootstrap-4.3.1-dist/js/main.js")